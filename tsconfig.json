{
  "compilerOptions": {
    "target": "es5",
    "module": "system",
    "outDir": "build",
    "declaration": false,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "removeComments": true,
    "noLib": false,
    "noUnusedLocals": true,
    "jsx": "react-native",
    "lib": ["dom", "ESNext"],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "typeRoots": ["./typings/import-png.d.ts", "./node_modules/@types"]
  },
  "include": ["src/**/*", "typings/**/*", "App.tsx"],
  "exclude": ["./node_modules/*", "**/*.spec.ts"]
}
